<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conexionbluetooth.BluetoothConnect"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/estatus_arduino"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:text="CONECTAR"
            android:paddingStart="15sp"
            android:paddingEnd="15sp"
            android:background="@drawable/button_conect"
            android:backgroundTint="@color/red_btn_bg_color"
            android:id="@+id/btn_conectar"
            android:textColor="@color/white"
            >
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:background="@drawable/button_conect"
            android:id="@+id/btn_desconectar"
            android:paddingStart="15sp"
            android:paddingEnd="15sp"
            android:textColor="@color/white"
            android:text="DESCONECTAR">
        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="No conectado"
        android:id="@+id/txt_dispositivos"
        >
    </TextView>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        android:id="@+id/switch_intervalometro"
        android:checked="true"
        android:textStyle="bold"
        android:text="Recibir informacion"></Switch>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/terminal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:background="@drawable/border_cuadro"
        >
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="borrar"
        android:background="@drawable/border_cuadro"
        android:backgroundTint="@color/azul"
        android:textColor="@color/white"
        >
    </Button>

</LinearLayout>